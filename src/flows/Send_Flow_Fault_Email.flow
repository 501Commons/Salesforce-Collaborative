<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <actionCalls>
        <description>Send an email when the flow errors</description>
        <name>C501_Send_Flow_Fault_Email</name>
        <label>Send Flow Fault Email</label>
        <locationX>143</locationX>
        <locationY>286</locationY>
        <actionName>emailSimple</actionName>
        <actionType>emailSimple</actionType>
        <inputParameters>
            <name>emailBody</name>
            <value>
                <elementReference>C501_varFaultEmailBody</elementReference>
            </value>
        </inputParameters>
        <inputParameters>
            <name>emailAddresses</name>
            <value>
                <elementReference>C501_varFaultEmailAddress</elementReference>
            </value>
        </inputParameters>
        <inputParameters>
            <name>emailSubject</name>
            <value>
                <stringValue>{!C501_varOrgName} - Error in {!C501_varFaultyFlowName}</stringValue>
            </value>
        </inputParameters>
    </actionCalls>
    <description>re-usable flow fault email; added GetFlowFaultEmailDetails; formatted email body</description>
    <interviewLabel>Send Flow Fault Email {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Send Flow Fault Email</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordLookups>
        <description>Get the email address and org name to populate the email</description>
        <name>GetFlowFaultEmailDetails</name>
        <label>GetFlowFaultEmailDetails</label>
        <locationX>138</locationX>
        <locationY>156</locationY>
        <assignNullValuesIfNoRecordsFound>true</assignNullValuesIfNoRecordsFound>
        <connector>
            <targetReference>C501_Send_Flow_Fault_Email</targetReference>
        </connector>
        <filters>
            <field>Label</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>UwscMaster</stringValue>
            </value>
        </filters>
        <object>C501_Fault_Email_Address__mdt</object>
        <outputAssignments>
            <assignToReference>C501_varOrgName</assignToReference>
            <field>C501_Org_Name__c</field>
        </outputAssignments>
        <outputAssignments>
            <assignToReference>C501_varFaultEmailAddress</assignToReference>
            <field>Email_Address__c</field>
        </outputAssignments>
        <sortField>Id</sortField>
        <sortOrder>Asc</sortOrder>
    </recordLookups>
    <startElementReference>GetFlowFaultEmailDetails</startElementReference>
    <status>Active</status>
    <textTemplates>
        <description>Send some info on what went sideways</description>
        <name>C501_varFaultEmailBody</name>
        <text>This flow:  {!C501_varFaultyFlowName}
Failed in this org:  {!C501_varOrgName}
Here&apos;s the error message. Go check it out.
{!C501_varFaultyFlowErrorMessage}</text>
    </textTemplates>
    <variables>
        <description>Holds the email address(es) of the fault email recipients</description>
        <name>C501_varFaultEmailAddress</name>
        <dataType>String</dataType>
        <isCollection>false</isCollection>
        <isInput>true</isInput>
        <isOutput>true</isOutput>
    </variables>
    <variables>
        <description>Holds the error message from the flow that triggered the email send</description>
        <name>C501_varFaultyFlowErrorMessage</name>
        <dataType>String</dataType>
        <isCollection>false</isCollection>
        <isInput>true</isInput>
        <isOutput>false</isOutput>
        <value>
            <elementReference>$Flow.FaultMessage</elementReference>
        </value>
    </variables>
    <variables>
        <description>Holds the name of the flow that failed</description>
        <name>C501_varFaultyFlowName</name>
        <dataType>String</dataType>
        <isCollection>false</isCollection>
        <isInput>true</isInput>
        <isOutput>true</isOutput>
    </variables>
    <variables>
        <description>Holds the org name for the fault email</description>
        <name>C501_varOrgName</name>
        <dataType>String</dataType>
        <isCollection>false</isCollection>
        <isInput>true</isInput>
        <isOutput>true</isOutput>
    </variables>
</Flow>
